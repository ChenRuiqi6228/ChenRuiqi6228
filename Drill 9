#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	double a, b, c, s, area;
	cout << "Please input the three sides of the triangle：" << '\n';
	cin >> a >> b >> c;
	if ((a + b) <= c || (b + c) <= a || (c + a) <= b)                //检测是否构成三角形
		cout << "The input three sides do not form a triangle, please re-enter！" << endl;
	else
	{
		s = ((a + b + c) / 2);
		area = sqrt(s * (s - a) * (s - b) * (s - c));            //海伦格式求三角形面积
		cout << "Area of triangle：" << area << endl;
	}
	return 0;
}
